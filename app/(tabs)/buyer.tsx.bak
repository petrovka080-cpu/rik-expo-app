          <Text style={[s.cardMeta, { color: COLORS.sub }]}>
            {`${prettyLabel(String(it.request_id), ridOld)} ¬∑ ${it.qty} ${it.uom || ''}`}
          </Text>

          <View style={{ height: 6 }} />
          <View style={{ gap: 2 }}>
            <Text style={{ color: COLORS.sub }}>
              –¶–µ–Ω–∞: <Text style={{ color: COLORS.text, fontWeight: '700' }}>{m.price || '‚Äî'}</Text>{' '}
              ‚Ä¢ –ü–æ—Å—Ç–∞–≤—â–∏–∫: <Text style={{ color: COLORS.text, fontWeight: '700' }}>{m.supplier || '‚Äî'}</Text>{' '}
              ‚Ä¢ –ü—Ä–∏–º.: <Text style={{ color: COLORS.text, fontWeight: '700' }}>{m.note || '‚Äî'}</Text>
            </Text>
            <Text style={{ color: COLORS.sub }}>
              –°—É–º–º–∞ –ø–æ –ø–æ–∑–∏—Ü–∏–∏: <Text style={{ color: COLORS.text, fontWeight: '700' }}>{sum ? sum.toLocaleString() : '0'}</Text> —Å–æ–º
            </Text>
          </View>

          <View style={{ flexDirection: 'row', gap: 8, marginTop: 10 }}>
            <Pressable onPress={() => openEdit(it)} style={[s.smallBtn, { borderColor: COLORS.primary }]}>
              <Text style={[s.smallBtnText, { color: COLORS.primary }]}>–ü—Ä–∞–≤–∏—Ç—å</Text>
            </Pressable>
            <View style={{ marginLeft: 'auto' }}>
