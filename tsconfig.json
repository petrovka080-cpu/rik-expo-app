{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "module": "ESNext"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
